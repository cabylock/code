
//1 

const mon = require('mongoose'); // Importing mongoose module



mon.connect('mongodb://localhost/school') // connect

// mon.Collection('students').insertOne({name: 'John', age: 25})

const schema = mon.Schema; // make a object schema
schema.ObjectId; // type _id in mongodb

const teacher_schema = new schema(
      {
         username: String,
         password:String
      },
      {
         collection: 'teacher' // if not given, it will take plural of model name
         // abc => abcs
         // person => people 
         // mongoose automatically pluralize the model name
      }
)

const teacher = mon.model('teacher', teacher_schema);// make a collection

teacher.find({})
.then((data) => console.log(data)) // data is an array  // to get field  : data[0].field_name // field must be defined in schema



